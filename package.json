{
  "name": "auroria-root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm --prefix backend start\" \"npm --prefix frontend start\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=frontend",
    "deploy:vercel": "vercel --prod",
    "preview:netlify": "npm run build && netlify deploy --dir=frontend",
    "preview:vercel": "vercel"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
